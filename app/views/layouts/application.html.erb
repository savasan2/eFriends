<!DOCTYPE html>
<html>
  <head>
    <title>eFriends</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="css/jTinder.css">
  </head>

  <body>
    <header>
    <h1>eFriends</h1>
    <% if user_signed_in? %>
      <li>
        <%= link_to "プロフィール", user_path(current_user.id) %>
      </li>
      <li>
        <%= link_to "マッチしたユーザー", user_match_path %>
      </li>
      <li>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "新規登録", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_user_session_path %>
      </li>
    <% end %>
    </header>
<!-- jQuery lib -->
<script type="text/javascript" src="javascripts/jquery.min.js"></script>

<!-- transform2d lib -->
<script type="text/javascript" src="javascripts/jquery.transform2d.js"></script>

<!-- jTinder lib -->
<script type="text/javascript" src="javascripts/jquery.jTinder.js"></script>

<!-- jTinder initialization script -->
<script>$("#tinderslide").jTinder();</script>
    <%= yield %>

  </body>
</html>
