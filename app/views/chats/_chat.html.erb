<%= form_with model: chat, url: chat_create_path, remote: true do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id %>
    <%= f.submit "送信する" %>
<% end %>
<table align="center">
    <thead>
        <tr>
            <td>投稿者名</td>
            <td>投稿内容</td>
        </tr>
    </thead>
    <tbody>
        <% chats.each do |chat| %>
          <tr>
            <td><%= attachment_image_tag chat.user, :image,  format: 'image', size: "40x40", fallback: "no_image.png", class: "img" %><%= chat.user.name %></td>
            <td><%= simple_format(h(chat.message)) %></td>
            <td><%= time_ago_in_words(chat.created_at).upcase %>前</td>
          </tr>
      <% end %>
    </tbody>
</table>