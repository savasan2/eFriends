<h2><%= User.find(params[:id]).name %></h2>
<%= form_with model: @chat, url: chat_create_path, remote: true do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id %>
    <%= f.submit "送信する" %>
<% end %>
<table>
    <thead>
        <tr>
            <td>投稿者名</td>
            <td>投稿内容</td>
        </tr>
    </thead>
    <tbody class="chat">
        <%= render 'chat', chats: @chats %>
    </tbody>

</table>