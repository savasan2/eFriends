<div id="tinderslide">
    <ul>
      <% @users.each do |user| %>
        <li class="pane">
          <div class="img"><%= attachment_image_tag user, :image,  format: 'image', size: "300x300" %></div>
          <div><%= user.name %></div>
          <div class="like"></div>
          <div class="dislike"></div>
        </li>
      <% end %>
    </ul>
</div>
<% @users.each do |user| %>
<%= attachment_image_tag user, :image,  format: 'image', size: "300x300" %>
<table>
  <tbody>
    <tr>
      <td>ニックネーム</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>性別</td>
      <td><%= user.gender %></td>
    </tr>
    <tr>
      <td>プレイしているゲーム</td>
      <td><%= user.genre.name %></td>
    </tr>
    <tr>
      <td>自己紹介</td>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <td><%= link_to '♥', follow_path(user.id), method: :POST %></td>
    </tr>
  </tbody>
</table>
<% end %>